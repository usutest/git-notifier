---
github:
    client_id: APP_CONFIG_GITHUB_CLIENT_ID
    client_secret: APP_CONFIG_GITHUB_CLIENT_SECRET

redis:
    host: APP_CONFIG_REDIS_HOST
    port: APP_CONFIG_REDIS_PORT
    db: APP_CONFIG_REDIS_DB
    namespace: APP_CONFIG_REDIS_NAMESPACE

mail:
    enabled: true
    method: smtp
    from: Git Notifier <sender@email.com>
    host: smtp.example.org
    port: 587
    user: someuser@somedomain.com
    password: somepass

domain: APP_CONFIG_DOMAIN #localhost:4567

secret: APP_CONFIG_SECRET

notifications_type:
  - star
  - fork
  - follow
  - unfollow
  - deleted
  - site-news

notifications_frequency:
  - asap
  - daily
  - weekly

deploy_id: 1

email_dev_on_signup: false
dev_email_address: some@email.com
